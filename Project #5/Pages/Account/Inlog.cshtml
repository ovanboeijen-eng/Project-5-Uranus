@page
@using global::Account.LoginPage.Pages
@model LoginModel   
@{
    ViewData["Title"] = "Inloggen";
}

<h2>Inloggen</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<!-- Camping selectie -->
<form method="post">
    <div class="form-group">
        <label for="campingSelect">Kies een camping</label>
        <select asp-for="SelectedCampingId" class="form-control" id="campingSelect">
            <option value="">-- Kies een camping --</option>
            @foreach (var c in Model.Campings)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>
    <button type="submit" asp-page-handler="SelectCamping" class="btn btn-secondary">Selecteer camping</button>
</form>

<hr />

<!-- Login formulier -->
<form method="post" asp-page-handler="Login">
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="Input.RememberMe" class="form-check-input" />
        <label asp-for="Input.RememberMe" class="form-check-label">Onthoud mij</label>
    </div>

    <button type="submit" class="btn btn-primary">Inloggen</button>
    <a asp-page="/Account/Regristratie" class="btn btn-outline-secondary ms-2">Registreren</a>
</form>

<!-- Logout knop -->
<form method="post" class="mt-3">
    <button type="submit" asp-page-handler="Logout" class="btn btn-link">Uitloggen</button>
</form>