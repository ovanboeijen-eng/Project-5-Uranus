@page
@using global::Account.LoginPage.Pages
@model LoginModel
@{
	ViewData["Title"] = "Inloggen";
}


<main class="authScreen">
	<section class="authScreenImg">
	</section>
	<div class="wrapper">
		<div class="loginHeading">
			<figure class="logoMarkDark">
				<img src="img/beeldmerkDonkerImg.png" />
			</figure>


			<h2>Log in</h2>
		</div>
		<section class="authScreenForms">
			@if (!string.IsNullOrEmpty(Model.ErrorMessage))
			{
				<div class="alert alert-danger">@Model.ErrorMessage</div>
			}

			@* <div asp-validation-summary="All" class="text-danger"></div> *@

			<!-- Camping selectie -->
			<form method="post" class="campingForm">
				<div class="form-group">
					<select asp-for="SelectedCampingId" class="form-control" id="campingSelect">
						<option value="" id="campingPlaceholder">Choose a camping </option>
						@foreach (var c in Model.Campings)
						{
							<option value="@c.Id">@c.Name</option>
						}
					</select>
				</div>
				@* <button type="submit" asp-page-handler="SelectCamping" class="btn btn-secondary">Confirm camping</button> *@
			</form>

			<!-- Login formulier -->
			<form method="post" asp-page-handler="Login" class="loginForm">
				<div class="form-group">
					<span asp-validation-for="Input.Email" class="text-danger"></span>
					<input asp-for="Input.Email" class="form-control" placeholder="E-mail*" />
					
				</div>

				<div class="form-group">
					<span asp-validation-for="Input.Password" class="text-danger"></span>
					<input asp-for="Input.Password" class="form-control" placeholder="Password*" />
				</div>

				@* <div class="form-group">
					<input asp-for="Input.RememberMe" class="form-check-input"  />
					<label asp-for="Input.RememberMe" class="form-check-label">Onthoud mij</label>
				</div> *@

				<button type="submit" class="btn">Inloggen</button>

			</form>
			<a asp-page="/Account/Regristratie" class="registerBtn btn">Heeft u nog geen account? Registreer hier.</a>
			@* <!-- Logout knop -->
			<form method="post" class="mt-3">
				<button type="submit" asp-page-handler="Logout" class="btn btn-link">Uitloggen</button>
			</form> *@
		</section>
	</div>
</main>