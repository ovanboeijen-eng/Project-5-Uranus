@page
@using Login.Klant.Page
@model RegristratieKlant.RegristratieKlantModel
@{
    ViewData["Title"] = "Registreren";
}

<main class="authScreen">
    <section class="authScreenImg"></section>

    <div class="wrapper">
        <div class="loginHeading">
            <figure class="logoMarkDark">
                <img src="img/beeldmerkDonkerImg.png" alt="Logo" />
            </figure>

            <h2>Registreer</h2>
        </div>

        <section class="authScreenForms">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post" asp-page-handler="Register" class="registerForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="E-mail*" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Wachtwoord"></label>
                    <input asp-for="Input.Wachtwoord" class="form-control" placeholder="Wachtwoord*" />
                    <span asp-validation-for="Input.Wachtwoord" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.BevestigWachtwoord"></label>
                    <input asp-for="Input.BevestigWachtwoord" class="form-control" placeholder="Bevestig wachtwoord*" />
                    <span asp-validation-for="Input.BevestigWachtwoord" class="text-danger"></span>
                </div>

                @* <div class="form-group">
                    <label asp-for="Input.Kenteken"></label>
                    <input asp-for="Input.Kenteken" class="form-control" placeholder="Kenteken*" />
                    <span asp-validation-for="Input.Kenteken" class="text-danger"></span>
                </div> *@

                <div class="form-group">
                    <label for="campingSelect">Kies een camping</label>
                    <select id="campingSelect" name="SelectedCampingId" class="form-control">
                        <option value="">-- Selecteer een camping --</option>
                        @foreach (var c in Model.Input?.Campings ?? new List<Login.Klant.Page.Camping>())
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </select>
                    <small class="form-text text-muted">Je kunt later nog een camping kiezen of wijzigen.</small>
                </div>

                <button type="submit" class="btn">Registreren</button>
            </form>

            <div class="mt-3">
                <a asp-page="/Account/Klant/InlogKlant" class="btn btn-link">Al een account? Inloggen</a>
            </div>
        </section>
    </div>
</main>

<partial name="_ValidationScriptsPartial" />
