@page
@model Project.Pages.Account.LoginMergedModel
@{
	ViewData["Title"] = "Inloggen";
}

<main class="authScreen desktopOnly">

	<section class="authScreenImg"></section>

	<div class="wrapper">
		<div class="loginHeading">
			<figure class="logoMarkDark">
				<img src="/img/beeldmerkDonkerImg.png" alt="Logo" />
			</figure>
			<h2>Log in</h2>
		</div>

		<section class="authScreenForms">
			<form method="post" asp-page-handler="DesktopLogin" class="loginForm">
				<div class="form-group">
					<input asp-for="DesktopInput.Email" class="form-control" placeholder="E-mail*" />
					<span asp-validation-for="DesktopInput.Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input asp-for="DesktopInput.Password" class="form-control" placeholder="Wachtwoord*" />
					<span asp-validation-for="DesktopInput.Password" class="text-danger"></span>
				</div>

				<button type="submit" class="btn">Inloggen</button>
			</form>

			<a asp-page="/Account/registrationMerged" class="registerBtn btn">
				Heeft u nog geen account? Registreer hier.
			</a>
		</section>
	</div>
</main>

<main class="inlogSchermApp mobileOnly">
	<div class="wrapperApp">
		<div class="loginHeadingApp">
			<figure class="logoMarkDarkApp">
				<img src="/img/beeldmerkDonkerImg.png" alt="Logo" />
			</figure>
		</div>

		<section class="authScreenFormsApp">
			<div class="loginHeaderApp">
				<h2>Log in</h2>
			</div>

			<form method="post" asp-page-handler="MobileLogin" class="loginFormApp">
				<div class="form-group">
					<input asp-for="MobileInput.Email" class="form-control" placeholder="E-mail*" />
					<span asp-validation-for="MobileInput.Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input asp-for="MobileInput.Password" class="form-control" placeholder="Wachtwoord*" />
					<span asp-validation-for="MobileInput.Password" class="text-danger"></span>
				</div>

				<button type="submit" class="btn">Inloggen</button>
			</form>


			<a asp-page="/Account/registrationMerged" class="registerBtn btn">
				Heeft u nog geen account? Registreer hier.
			</a>
		</section>
	</div>
</main>
